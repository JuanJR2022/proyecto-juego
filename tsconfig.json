{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx", // o "react" si es para versiones anteriores de React
   "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest","node"],
    "rootDir": "./src",  
    "outDir": "./build/js"
    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
